@using DomainModels

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">
                <i class="bi bi-door-open-fill"></i> Værelser
            </h5>
            <a class="btn btn-light" href="/dashboard/createroom"><i class="bi bi-plus"></i></a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Værelsesnr.</th>
                        <th>Hotel Id</th>
                        <th>Rumtype Id</th>
                        <th>Pris / nat</th>
                        <th>Oprettet</th>
                        <th>Opdateret</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (rooms == null || rooms.Length == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center">Ingen rum</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in rooms)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.RoomNumber</td>
                                <td>@r.HotelId</td>
                                <td>@r.RoomtypeId</td>
                                <td class="text-end">@((r.RoomtypePricePerNight ?? 0).ToString("F2"))</td>
                                <td>@r.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@r.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <NavLink href="@($"/dashboard/updateroom/{r.Id}")" class="nav-link">
                                        <i class="bi bi-pencil-square"></i>
                                    </NavLink>

                                </td>
                                <td>
                                    <NavLink data-toggle="modal" href="@($"/dashboard/deleteroom/{r.Id}")" class="nav-link">
                                        <i class="bi bi-trash3"></i>
                                    </NavLink>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    [Parameter] public RoomGetDto[]? rooms { get; set; }
}
