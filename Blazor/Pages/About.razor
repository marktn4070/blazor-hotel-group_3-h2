@page "/about"
@using DomainModels
@inject Blazor.Services.APIService ApiService
@using System.Net.Http

<PageTitle>Suite Dreams - About Us</PageTitle>

<div class="about_page">
    <div class="text-center mb-4">
        <h3 class="fw-bold">About Us</h3>
    </div>
    @if (hotels == null)
    {
        <p><em>Loading hotels...</em></p>
    }
    else if (hotels.Length == 0)
    {
        <div class="alert alert-info">No hotels found.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var h in hotels)
            {
                <div class="col-12">
                    <div class="card text-bg-dark rounded-3 overflow-hidden">
                        <!-- Billede: styling flyttet til CSS -->
                        <img src="images/hotel_@(h.Id)_outside.jpg"
                             class="card-img about-card-img"
                             alt="Billede af @h.Name">

                        <!-- Overlay: tekst direkte ovenpå billedet -->
                        <div class="card-img-overlay d-flex align-items-end p-0">
                            <div class="w-100 overlay-content text-white" style="text-shadow: 0 2px 6px rgba(0,0,0,0.7);">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title fw-bold mb-0">@h.Name</h5>
                                </div>

                                <p class="card-text small mb-1">
                                    @h.Description
                                </p>

                                <p class="card-text">
                                    <small class="text-white">@h.Road — @h.Zip @h.City, @h.Country</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private HotelGetDto[]? hotels;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            hotels = await ApiService.GetHotelsAsync(3);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af hoteller: {ex.Message}");
            hotels = Array.Empty<HotelGetDto>();
        }
    }
}
