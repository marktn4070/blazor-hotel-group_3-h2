@page "/dashboard/deletehotel/{id:int}"
@inject Blazor.Services.APIService ApiService
@inject NavigationManager Navigation

<h3>Delete Hotel</h3>

@if (hotel == null)
{
    <p><em>Loading hotel details...</em></p>
}
else
{
    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this hotel?</h5>
        <p><strong>@hotel.Name</strong> - @hotel.City</p>
    </div>

    <button class="btn btn-danger" @onclick="ConfirmDelete">Yes, Delete</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
}

@code {
    [Parameter] public int Id { get; set; }
    private HotelDetailsDto? hotel;

    protected override async Task OnInitializedAsync()
    {
        hotel = await ApiService.GetHotelByIdAsync(Id);
    }

    private async Task ConfirmDelete()
    {
        await ApiService.DeleteHotelAsync(Id);
        Navigation.NavigateTo("/dashboard/hotels");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/dashboard/hotels");
    }
}
