@page "/dashboard/roomtype"
@using System.Net.Http

<PageTitle>Suite Dreams - View Rooms</PageTitle>

<div class="view_hotel_page">
    <div class="text-center mb-4">
        <h3 class="fw-bold">Dashboard</h3>
    </div>
    @if (roomtypes == null)
    {
        <p><em>Loading roomtypes...</em></p>
    }
    else if (roomtypes.Length == 0)
    {
        <div class="alert alert-info">No roomtypes found.</div>
    }
    else
    {
        <div class="mx-5">
            <div class="row">
                <div class="col-12">
                    <RoomtypeTable roomtypes="@roomtypes" />
                </div>
            </div>
        </div>
    }
</div>

@code {
    private RoomtypeGetDto[]? roomtypes;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            roomtypes = await ApiService.GetRoomtypesAsync(0);

            // Sortér rumtyper efter RoomtypeId i stigende rækkefølge
            if (roomtypes != null && roomtypes.Length > 1)
            {
                roomtypes = roomtypes.OrderBy(rt => rt.Id).ToArray();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fejl ved hentning af rum: {ex.Message}");
            roomtypes = Array.Empty<RoomtypeGetDto>();
        }
    }
}